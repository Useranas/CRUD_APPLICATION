<h3>This is edit page</h3>
<%= form_tag update_user_path(id: @user.id), method: :put do %>
  username    <%= text_field_tag "name", "#{@user.name}" %> <br><br>
  usrephone.no <%= text_field_tag "phone_no","#{@user.phone_no}" %><br><br>
  useremail    <%= text_field_tag "email", "#{@user.email}" %> <br><br>
  userpassword <%= text_field_tag "password", "#{@user.password}"%><br>  
  <%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>

<% end %>